journal = {Plant Journal},
keywords = {Actin filaments,Arabidopsis thaliana,Post-Golgi traffic,RABA1,Rab11,Salinity stress},
month = {jan},
number = {2},
pages = {240--249},
title = {{Arabidopsis RABA1 GTPases are involved in transport between the trans-Golgi network and the plasma membrane, and are required for salinity stress tolerance}},
